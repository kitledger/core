{
  "name": "@kitledger/core",
  "version": "0.0.1",
  "description": "Programmable accounting ledger",
  "keywords": [
    "erp",
    "ledger",
    "accounting",
    "framework",
    "platform"
  ],
  "homepage": "https://github.com/kitledger/core#readme",
  "bugs": {
    "url": "https://github.com/kitledger/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitledger/core.git"
  },
  "license": "Apache-2.0",
  "author": "Alejandro Barrera Aponte",
  "type": "module",
  "private": true,
  "main": "dist/server.js",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build",
    "build:server": "tsc --build tsconfig.server.json && tsc --build tsconfig.test.json",
    "build:server:watch": "tsc --build tsconfig.server.json --watch",
    "db:custom": "drizzle-kit generate --custom",
    "db:generate": "drizzle-kit generate",
    "dev": "concurrently \"npm:build:server:watch\" \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "vite",
    "dev:server": "nodemon --exec \"node --env-file=.env\" ./dist/server/main.js",
    "setup": "tsx --env-file=.env ./src/server/main.ts setup",
    "start": "node --env-file=.env ./dist/server/main.js",
    "test": "npm run build:server && node --env-file=.env --test ./dist/test/**/*.test.js",
    "typecheck": "vue-tsc -b"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@kitledger/actions": "^0.0.14",
    "@kitledger/query": "^0.0.14",
    "@node-rs/argon2": "^2.0.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.3",
    "knex": "^3.1.0",
    "motion": "^12.23.24",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "uuid": "^13.0.0",
    "valibot": "^1.1.0",
    "vite": "^7.1.11",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^24.9.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.2"
  }
}
