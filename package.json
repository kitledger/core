{
  "name": "@kitledger/core",
  "version": "0.0.1",
  "description": "Programmable accounting ledger",
  "keywords": [
    "erp",
    "ledger",
    "accounting",
    "framework",
    "platform"
  ],
  "homepage": "https://github.com/kitledger/core#readme",
  "bugs": {
    "url": "https://github.com/kitledger/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitledger/core.git"
  },
  "license": "Apache-2.0",
  "author": "Alejandro Barrera Aponte",
  "type": "module",
  "private": true,
  "main": "dist/server.js",
  "directories": {
    "test": "test"
  },
  "engines" : { 
    "node" : ">=25.0.0"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "db:custom": "drizzle-kit generate --custom",
    "db:generate": "drizzle-kit generate",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx --env-file=.env ./src/server/main.ts",
    "setup": "tsx --env-file=.env ./src/server/main.ts setup",
	"start": "node --env-file=.env ./dist/server/main.js",
    "test": "tsx --env-file=.env --test test/**/*.test.ts",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@kitledger/actions": "^0.0.14",
    "@kitledger/query": "^0.0.14",
    "@mantine/charts": "^8.3.5",
    "@mantine/code-highlight": "^8.3.5",
    "@mantine/core": "^8.3.5",
    "@mantine/dates": "^8.3.5",
    "@mantine/dropzone": "^8.3.5",
    "@mantine/form": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "@mantine/notifications": "^8.3.5",
    "@mantine/spotlight": "^8.3.5",
    "@node-rs/argon2": "^2.0.2",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.133.32",
    "@tanstack/react-router-devtools": "^1.133.34",
    "@tanstack/router-plugin": "^1.133.32",
    "@vitejs/plugin-react": "^5.1.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.3",
    "knex": "^3.1.0",
    "motion": "^12.23.24",
    "pg": "^8.16.3",
    "poolifier": "^5.1.6",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.3.0",
    "uuid": "^13.0.0",
    "valibot": "^1.1.0",
    "vite": "^7.1.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
