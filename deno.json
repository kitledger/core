{
	"compilerOptions": {
		"lib": ["ES2022", "DOM", "DOM.Iterable", "deno.ns", "deno.unstable", "deno.worker"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false,
		"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
		"nextControlFlowPosition": "nextLine"
	},
	"imports": {
		"@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
		"@faker-js/faker": "npm:@faker-js/faker@^9.9.0",
		"@headlessui/react": "npm:@headlessui/react@^2.2.9",
		"@heroicons/react": "npm:@heroicons/react@^2.2.0",
		"@hono/hono": "jsr:@hono/hono@^4.8.4",
		"@kitledger/actions": "npm:@kitledger/actions@^0.0.14",
		"@kitledger/query": "npm:@kitledger/query@^0.0.14",
		"@node-rs/argon2": "npm:@node-rs/argon2@^2.0.2",
		"@poolifier/poolifier-web-worker": "jsr:@poolifier/poolifier-web-worker@^0.5.8",
		"@std/assert": "jsr:@std/assert@1",
		"@std/path": "jsr:@std/path@^1.1.1",
		"@std/testing": "jsr:@std/testing@^1.0.15",
		"@std/uuid": "jsr:@std/uuid@^1.0.9",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.15",
		"@tanstack/react-query": "npm:@tanstack/react-query@^5.90.5",
		"@tanstack/react-router": "npm:@tanstack/react-router@^1.133.27",
		"@tanstack/react-router-devtools": "npm:@tanstack/react-router-devtools@^1.133.27",
		"@tanstack/router-plugin": "npm:@tanstack/router-plugin@^1.133.27",
		"@types/react": "npm:@types/react@^19.1.13",
		"@types/react-dom": "npm:@types/react-dom@^19.1.9",
		"@valibot/valibot": "jsr:@valibot/valibot@^1.1.0",
		"@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.0.2",
		"clsx": "npm:clsx@^2.1.1",
		"drizzle-kit": "npm:drizzle-kit@^0.31.4",
		"drizzle-orm": "npm:drizzle-orm@^0.44.2",
		"knex": "npm:knex@^3.1.0",
		"motion": "npm:motion@^12.23.24",
		"pg": "npm:pg@^8.16.3",
		"postgres": "npm:postgres@^3.4.7",
		"react": "npm:react@^19.1.1",
		"react-dom": "npm:react-dom@^19.1.1",
		"tailwindcss": "npm:tailwindcss@^4.1.15",
		"vite": "npm:vite@^7.1.5"
	},
	"nodeModulesDir": "auto",
	"tasks": {
		"build": "deno run -A npm:vite build",
		"client:dev": "",
		"db:custom": "deno run -A npm:drizzle-kit generate --custom",
		"db:generate": "deno run -A npm:drizzle-kit generate",
		"dev": "deno run -A --watch --env-file --unstable-worker-options ./server/main.ts & deno run -A npm:vite build --watch",
		"format": "deno fmt",
		"start": "deno run -A --watch --env-file --unstable-worker-options ./server/main.ts createSuperUser Alejandro Barrera alebarrera76@gmail.com",
		"test": "deno test --unstable-worker-options --env-file -A",
		"typecheck": "deno check server/**/*.ts test/**/*.ts client/**/*.tsx client/**/*.ts"
	}
}
